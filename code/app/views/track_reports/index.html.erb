<% content_for(:title, 'Track a Report') %>

<div>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>    
  <h1>Track Report Status</h1>  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:victim_session, url: track_reports_path) do |f| %>
      <br>
      <%= f.label :identification_code %>
      <%= f.password_field :user_identifier, class: 'form-control' %>
      <br>
      <%= f.submit "Find your report", class: "btn btn-primary" %>
      <% end %>
      <br>
      <p>Looking to submit a report? <%= link_to "Submit one here.", new_report_path %></p>
    </div>
  </div>  
</div>
