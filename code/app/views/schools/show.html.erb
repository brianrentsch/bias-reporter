<% content_for(:title, @school.name.upcase + ' Profile') %>
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>    

<h2>Welcome, <%= @school.name.upcase %></h2>

<% @reports = Report.where(:school_id => params[:id]) %>

<h1>Your Reports:</h1>
<% if @reports.empty? %>
<h4>No reports to display</h4>
<% else %>   
  <table>
    <thead>
      <tr>
        <th>Date</th>
	<th>Time</th>
	<th>Location</th>
	<th>Details</th>
	<th>Status</th>
	<th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @reports.each do |report| %>
      <tr>
	<td><%= report.date %></td>
	<td><%= report.time %></td>
	<td><%= report.location %></td>
	<td><%= report.details %></td>
	<td><%= report.status %></td>
	<td><%= link_to 'Edit resolution status', edit_report_path(report) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<% end %>
<br>
